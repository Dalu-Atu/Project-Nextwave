{
  "env": {
    "node": true, // Enables Node.js global variables like process
    "commonjs": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next" }],
    "no-undef": "error"
  }
}
